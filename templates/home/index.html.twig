{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper top">
    {% for client in clients %}
        <div class="card my-2 relative box-shadow" style=
        "backgound-color:{{ (client.cleaned == true) ? 'black' : 'black' }}">
            <div class="card-header">{{ client.firstname }} {{ client.initial }}.<a href="{{ path('app_delete', {'id': client.id }) }}" onclick="return confirm('Etes-vous sûr de supprimer ce client ?');"><img class="icon" src="{{ asset('_assets/pictures/bin.svg')}}"></a></div>
            <div class="position-absolute end-0 pe-2" style="line-height: 2.5em">
                <img src="{{ asset('_assets/pictures/phone.svg')}}" class="icon">
                {{ client.phoneNumber }} </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">du {{ client.arrivalDate|date("d/m/Y à H:m") }}<br>
                au {{ client.departureDate|date("d/m/Y à H:m") }}</li>
                <li class="list-group-item">{{ client.adults }} {{ (client.adults > 1) ? 'adultes' : 'adulte' }}
                - {{ client.children }} {{ (client.children > 1) ? 'enfants' : 'enfant'  }}</li>
                <li class="list-group-item">
                <form class="my-1 w-100 px-5" method="POST" action="{{ path('app_clean', {'id': client.id }) }}">    
                    <input class="btn btn-success w-100" type="submit" value="Sortie effectuée">
                </form>
                </li>
            </ul>
    {% endfor %}
</div>
{% endblock %}
