{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Corniche de la plage</h1>
    <h3>Planning des locations</h3>

    {% for client in clients %}
        <div class="card my-2" style="">
            <div class="card-header">{{ client.firstname }} {{ client.initial }}.</div>
            <div class="card-header">{{ client.phoneNumber }} </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">du {{ client.arrivalDate|date("d/m/Y à H:m") }}<br>
                au {{ client.departureDate|date("d/m/Y à H:m") }}</li>
                <li class="list-group-item">{{ client.adults }} {{ (client.adults > 1) ? 'adultes' : 'adulte' }}
                - {{ client.children }} {{ (client.children > 1) ? 'enfants' : 'enfant'  }}</li>
                <form class="my-1 w-100 px-5" action="#">
                    <input type="hidden" name="cleaned" value="true">
                    <input class="btn btn-success w-100" type="submit" value="Sortie effectuée">
                </form>
            </ul>
    {% endfor %}
</div>
{% endblock %}
